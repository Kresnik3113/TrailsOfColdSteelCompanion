<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WalkthroughActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#9F9999"
        android:orientation="horizontal">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/Prologue"
                    android:layout_width="match_parent"
                    android:layout_marginTop="100px"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ripple_effect"
                    android:text="Prologue" />

                <Button
                    android:id="@+id/Chapter1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100px"
                    android:background="@drawable/ripple_effect"
                    android:text="Chapter 1" />

                <Button
                    android:id="@+id/Chapter2"
                    android:layout_width="match_parent"
                    android:layout_marginTop="100px"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ripple_effect"
                    android:text="Chapter 2" />

                <Button
                    android:id="@+id/Chapter3"
                    android:layout_width="match_parent"
                    android:layout_marginTop="100px"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ripple_effect"
                    android:text="Chapter 3" />

                <Button
                    android:id="@+id/Chapter4"
                    android:layout_width="match_parent"
                    android:layout_marginTop="100px"
                    android:background="@drawable/ripple_effect"
                    android:layout_height="wrap_content"
                    android:text="Chapter 4" />

                <Button
                    android:id="@+id/Chapter5"
                    android:layout_width="match_parent"
                    android:layout_marginTop="100px"
                    android:background="@drawable/ripple_effect"
                    android:layout_height="wrap_content"
                    android:text="Chapter 5" />

                <Button
                    android:id="@+id/Chapter6"
                    android:layout_width="match_parent"
                    android:layout_marginTop="100px"
                    android:background="@drawable/ripple_effect"
                    android:layout_height="wrap_content"
                    android:text="Chapter 6" />

                <Button
                    android:id="@+id/FinalChapter"
                    android:layout_width="match_parent"
                    android:layout_marginTop="100px"
                    android:background="@drawable/ripple_effect"
                    android:layout_height="wrap_content"
                    android:text="Final Chapter" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>